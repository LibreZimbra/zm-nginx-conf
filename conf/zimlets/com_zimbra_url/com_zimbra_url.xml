<zimlet name="com_zimbra_url" version="1.0" description="URL">
	<serverExtension hasKeyword="url" extensionClass="com.zimbra.cs.zimlet.handler.URLHandler"/>
	<contentObject>
		<matchOn>
			<regex>/((telnet:)|((https?|ftp|gopher|news|file):\/\/)|(www\.[\w\.\_\-]+))[^\s\xA0\(\)\&lt;\>\[\]\{\}\'\"]*/ig</regex>
		</matchOn>

		<onClick>
 		    <canvas style="window"/>
			<actionUrl method="get" target="${objectContent}" />
		</onClick>

		<toolTip width="205" height="150">
 		    <canvas style="inline"/>
			<actionUrl target="'http://pthumbnails.alexa.com/image_server.cgi?id=' + document.domain + '&amp;url=' + ${objectContent}" />
		</toolTip>
	</contentObject>
</zimlet>
