<zimlet name="com_zimbra_amzn" version="1.0" description="Amazon">
	<include>amzn.js</include>
	<resource>blank_pixel.gif</resource>
	<handlerObject>Com_Zimbra_Amzn</handlerObject>
	
	<contentObject type="isbn">
		<matchOn>
			<regex attrs="ig">ISBN\x20\d{1,5}[ -]?\d{1,7}[ -]?\d{1,6}[ -]?(\d|X)\b</regex>
		</matchOn>
		<onClick>
 		    <canvas style="window"/>
			<actionUrl target="http://www.amazon.com/exec/obidos/external-search/002-8747903-2137627?field-keywords=${objectContent}&amp;sourceid=Zimbra"/>
		</onClick>
	</contentObject>
</zimlet>