<zimlet name="com_zimbra_bugz" version="1.0" description="Bugz">
	<include>ZmBugzObjectHandler.js</include>
	<resource>bugz.xsl</resource>
	<handlerObject>ZmBugzObjectHandler</handlerObject>
	<contentObject type="bugz">
        <matchOn>
            <regex attrs="ig">(?:(?:\bbug(?:zilla)?:?\s*#?)|(?:show_bug.cgi\?id=))(\d+)\b</regex>
        </matchOn>
		<onClick>
 		    <canvas style="window"/>
			<actionUrl target="${config.global.url}${src.$1}"/>
		</onClick>
    </contentObject>
</zimlet>
